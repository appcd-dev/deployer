apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: $name-crb
  labels:
    app.kubernetes.io/instance: $name
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: $name-clusterrole  # Matches ClusterRole name
subjects:
  - kind: ServiceAccount
    name: terraform-runner
    namespace: $namespace
